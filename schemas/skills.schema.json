{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skills Schema (fixed)",
  "description": "Minimal skills schema for CI validation (fixed copy).",
  "type": "object",
  "properties": {
    "skills": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 60,
        "pattern": "^([a-z]+:)?[a-z0-9-]+$"
      },
      "uniqueItems": true,
      "maxItems": 200
    },
    "teamPresets": {
      "type": "object",
      "minProperties": 0,
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string", "minLength": 1 },
        "uniqueItems": true,
        "minItems": 1,
        "maxItems": 20
      }
    },
    "agentRoles": {
      "type": "object",
      "properties": {
        "agents": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "role": { "type": "string", "minLength": 1 },
              "skills": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 },
                "uniqueItems": true,
                "minItems": 1,
                "maxItems": 8
              },
              "resources": {
                "type": "object",
                "properties": {
                  "maxVramGB": { "type": "number", "minimum": 0 },
                  "maxCpu": { "type": "number", "minimum": 0 }
                },
                "additionalProperties": false
              }
            },
            "required": ["name","role","skills"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["skills"],
  "additionalProperties": true
}
